{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}
{% extends 'base.html.twig' %}
{% block body %}
<h1>
				Modification d'un Article</h1>
			{{ form_start(formArticle) }}

			{{ form_row(formArticle.Titre, {'attr':{'placeholder':"Titre de Post"}}) }}
			{{ form_row(formArticle.Content, {'attr':{'placeholder':"Contenu de Post"}}) }}
			<button type="submit" class="btn btn-success">
				Modifier l'article</button>


			{{ form_end(formArticle) }}
{% endblock %}